<article id="movie" class="movie">
  <header>
    <%= image_for(@movie) %>
    <h1><%= @movie.title %></h1>
    <h2>Released: <%= @movie.released_on %></h2>
  </header>

  <p>
    <%= @movie.description %>
  </p>
  
  <h3 class="no-rule">
    <%= @movie.rating %> &bull; <%= @movie.duration %> 
  </h3>
  
  <h3>Cast</h3>
  <p>
    <%= @movie.cast %>
  </p>
  
  <h3>Director</h3>
  <p>
    <%= @movie.director %>
  </p>
  
  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>

  <footer>
    <nav>
      <p>
        <%= link_to 'Edit', edit_movie_path(@movie), class: 'button' %>
      <%= link_to 'Delete', movie_path(@movie), 
                  class: 'button',
                  method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
      
      <p>Average Review: 
        <%= format_average_stars(@movie) %>
      </p>

        <h4>Most recent reviews: </h4>
        <ol id= "reviews">
          <% format_recent_reviews(@movie).each do |review| %>
            <li><%= review.comment %><li>
          <% end %>
        </ol>

        <p>Click here to read all <%= link_to pluralize(@movie.reviews.size, 'review '), movie_reviews_path(@movie) %>
        </p>


        <p>
          <%= link_to pluralize(@movie.reviews.size, 'review'), movie_reviews_path(@movie), class: 'button ok review' %>

          <%= link_to 'Write Review', new_movie_review_path(@movie), class: 'button ok review' %>
        </p>

    </nav>
  </footer>
</article>
