<header id="content-header">
	New Review for <%= link_to @movie.title, movie_path(@movie) %>
</header></br>

<%= render 'shared/errors', object: @review %>

<%= form_for([@movie, @review]) do |f| %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>         
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required stars">
        <%= f.label :stars %>  
        <%= f.select :stars, Review::STARS, prompt: "Select a star" %>      
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 40, rows: 5, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p>
      <%= f.submit 'Post Review' %> 
      <%= link_to "Cancel", @movie, class: 'button' %>
    </p>
  </fieldset>
<% end %>
